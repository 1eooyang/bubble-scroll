<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/grey"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <cdflynn.android.library.scroller.BubbleScroller
        android:id="@+id/bubble_scroller"
        android:layout_width="100dp"
        android:layout_centerInParent="true"
        android:layout_height="match_parent"
        app:bubbleScroller_highlightColor="@color/lake"
        app:bubbleScroller_textColor="@color/chrome"
        app:bubbleScroller_textSize="@dimen/text_size_small"/>
</RelativeLayout>
